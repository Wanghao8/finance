.van-nav-bar {
  background-color: #E3A33D !important;
  height: 100rpx;
  width: 100vw;
}

.van-nav-bar__title {
  font-family: PingFangSC-Regular !important;
  font-size: 18px !important;
  color: #FFFFFF !important;
  letter-spacing: 0 !important;
}

.van-nav-bar__text {
  font-family: PingFangSC-Medium !important;
  font-size: 14px !important;
  color: #FFFFFF !important;
  letter-spacing: 0 !important;
}

.van-hairline--bottom:after {
  border: none !important;
}

.van-icon-arrow-left {
  color: #fff !important;
  font-size: 40rpx !important;
}

.container {
  background: #fff;
}

.container .form-box {
  width: 712rpx;
}

.container .form-box .label {
  font-family: PingFangHK-Regular;
  font-size: 25rpx;
  color: #4A4A4A;
  letter-spacing: 0;
  width: 100rpx;
  margin-top: 16rpx;
  margin-right: 25rpx;
}

.container .form-box input {
  padding: 32rpx 0 16rpx 0;
  width: 588rpx;
  border-bottom: 2rpx solid #EAEAEA;
}

.container .form-box .input-placeholder {
  font-family: PingFangHK-Regular;
  font-size: 28rpx;
  color: #BBBBBB;
  letter-spacing: 0;
}

.container .bottom-btn {
  background-image: linear-gradient(0deg, #D36221 0%, #F2AD3C 100%, #F7E7AC 100%);
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  letter-spacing: 0;
}
