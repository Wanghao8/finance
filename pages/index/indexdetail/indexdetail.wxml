    <van-nav-bar title="资金明细" left-arrow bind:click-left="onClickLeft" />
    <view class="top-box">
        <view class="top-content-box">
            <view class="top-title-box flexr0c">
                <image hidden="{{paytype!=1}}" class="" src="../../../assets/images/Alipay-small.png"></image>
