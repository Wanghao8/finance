.van-tabbar-item--active .van-tabbar-item__text {
  color: #E3A33D;
}

.van-tabbar--fixed {
  background-image: linear-gradient(0deg, #F6F6F6 0%, rgba(246, 246, 246, 0) 100%);
  box-shadow: 0 -13px 27px 0 rgba(0, 0, 0, 0.05);
}

.container .top-box {
  width: 100%;
  height: 306rpx;
}

.container .top-box image {
  width: 25rpx;
  height: 25rpx;
}

.container .top-box .comname {
  font-size: 20rpx;
  color: #FFFFFF;
}

.container .top-box .username {
  font-size: 20rpx;
  color: #FFFFFF;
}

.container .top-box .center {
  width: 100%;
}

.container .top-box .center .top-title {
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .top-subtitle {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .money-num {
  font-family: PingFangSC-Semibold;
  font-size: 84rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .top-time {
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .count-tabel {
  width: 716rpx;
  height: 110rpx;
  background-color: #fff;
  box-shadow: 0 20px 20px 0 rgba(0, 0, 0, 0.05);
}

.container .count-tabel .count-tabel-item {
  width: 49%;
}

.container .count-tabel .count-tabel-item .tabel-item {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #222222;
  letter-spacing: 0;
  padding: 0 16rpx 0 22rpx;
}

.container .count-tabel .count-tabel-item .in-num {
  font-family: PingFangSC-Semibold;
  font-size: 38rpx;
  color: #E3A33D;
  letter-spacing: 0;
}

.container .count-tabel .count-tabel-item .out-num {
  font-family: PingFangSC-Semibold;
  font-size: 38rpx;
  color: #206DE7;
  letter-spacing: 0;
}

.container .count-tabel .split-line {
  width: 2rpx;
  height: 62rpx;
  background: rgba(187, 187, 187, 0.66);
}

.container .list-box {
  width: 716rpx;
}

.container .list-box .list-item-box {
  width: 100%;
  background: #FFFFFF;
  box-shadow: 0 5px 15px 0 rgba(0, 0, 0, 0.05);
  border-radius: 8px;
}
