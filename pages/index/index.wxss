.van-tabbar-item--active .van-tabbar-item__text {
  color: #E3A33D;
}

.van-tabbar--fixed {
  background-image: linear-gradient(0deg, #F6F6F6 0%, rgba(246, 246, 246, 0) 100%);
  box-shadow: 0 -13rpx 27rpx 0 rgba(0, 0, 0, 0.05);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.container .top-box {
  width: 100%;
}

.container .top-box image {
  width: 25rpx;
  height: 25rpx;
  margin: 28rpx 10rpx 28rpx 28rpx;
}

.container .top-box .comname {
  font-size: 20rpx;
  color: #FFFFFF;
  margin-right: 10rpx;
}

.container .top-box .username {
  font-size: 20rpx;
  color: #FFFFFF;
}

.container .top-box .center {
  width: 100%;
  height: 100%;
}

.container .top-box .center .top-title {
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .top-subtitle {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .money-num {
  font-family: PingFangSC-Semibold;
  font-size: 84rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .top-box .center .top-time {
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.container .count-tabel {
  width: 716rpx;
  height: 110rpx;
  background-color: #fff;
  box-shadow: 0 20rpx 20rpx 0 rgba(0, 0, 0, 0.05);
}

.container .count-tabel .count-tabel-item {
  width: 49%;
  padding: 26rpx 0;
}

.container .count-tabel .count-tabel-item .tabel-item {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #222222;
  letter-spacing: 0;
  padding: 0 16rpx 0 22rpx;
}

.container .count-tabel .count-tabel-item .in-num {
  font-family: PingFangSC-Semibold;
  font-size: 38rpx;
  color: #E3A33D;
  letter-spacing: 0;
  font-weight: bold;
}

.container .count-tabel .count-tabel-item .out-num {
  font-family: PingFangSC-Semibold;
  font-size: 38rpx;
  color: #206DE7;
  letter-spacing: 0;
  font-weight: bold;
}

.container .count-tabel .split-line {
  width: 2rpx;
  height: 62rpx;
  background: rgba(187, 187, 187, 0.66);
}

.container .list-container {
  margin-top: 18rpx;
}

.container .list-container .empty {
  width: 100%;
  height: 100%;
  background: rgba(228, 228, 228, 0.6);
}

.container .list-container .empty .empty-img {
  width: 236rpx;
  height: 154rpx;
}

.container .list-container .empty .no-data {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #9B9B9B;
  letter-spacing: 0;
}

.container .list-container .list-box {
  width: 676rpx;
  margin-left: 18rpx;
}

.container .list-container .list-box .list-item-box {
  width: 100%;
  background: #FFFFFF;
  box-shadow: 0 5rpx 15rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 6rpx;
  padding: 20rpx;
  position: relative;
  margin-bottom: 16rpx;
}

.container .list-container .list-box .list-item-box .check-type {
  width: 84rpx;
  height: 30rpx;
  background-color: #DC863A;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 12rpx;
}

.container .list-container .list-box .list-item-box .list-item-left {
  line-height: 40rpx;
}

.container .list-container .list-box .list-item-box .list-item-left .list-item-title {
  font-family: PingFangSC-Regular;
  font-size: 25rpx;
  color: #A0A0A0;
  letter-spacing: 0;
  width: 100rpx;
  margin-right: 25rpx;
}

.container .list-container .list-box .list-item-box .list-item-left .list-item-content {
  font-family: PingFangSC-Medium;
  font-size: 25rpx;
  color: #4A4A4A;
  letter-spacing: 0;
}

.container .list-container .list-box .list-item-box .list-item-left image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.container .list-container .list-box .list-item-box .list-item-right .list-item-num {
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  color: #E3A33D;
  letter-spacing: 0;
  margin-right: 16rpx;
  font-weight: 500;
}

.container .list-container .list-box .list-item-box .list-item-right .list-item-num2 {
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  color: #206DE7;
  letter-spacing: 0;
  margin-right: 16rpx;
  font-weight: 500;
}

.container .list-container .list-box .list-item-box .list-item-right image {
  width: 20rpx;
  height: 32rpx;
}

.container .list-container .list-box .list-item-box .list-item-right .in-type {
  font-family: PingFangSC-Regular;
  font-size: 16rpx;
  color: #00B6AD;
  letter-spacing: 0;
  text-align: right;
  margin-right: 36rpx;
}
